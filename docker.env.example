# API服务配置
API_PORT=8000
CORS_ORIGINS=http://localhost:3001,http://localhost:3000,http://localhost

# Web服务配置
WEB_PORT=80

# 代理服务配置（生产环境）
PROXY_PORT=8080

# 数据库配置（如果需要）
# DATABASE_URL=postgresql://username:password@localhost:5432/wenshu
# REDIS_URL=redis://localhost:6379

# 安全配置
# JWT_SECRET_KEY=your-secret-key
# ENCRYPTION_KEY=your-encryption-key

# 日志配置
LOG_LEVEL=INFO

# OpenConnect VPN配置（用于CI/CD）
# VPN_SERVER=your-vpn-server.com
# VPN_USERNAME=your-username
# VPN_PASSWORD=your-password

# 内网部署服务器配置
DEPLOY_HOST=your-internal-server-ip
DEPLOY_USER=deploy
DEPLOY_PATH=~/wenshu

# Docker Registry配置（如果使用私有镜像仓库）
# DOCKER_REGISTRY=your-registry.com
# DOCKER_USERNAME=your-username
# DOCKER_PASSWORD=your-password
