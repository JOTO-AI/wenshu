{
  "name": "@wenshu/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:web": "nx serve web-app",
    "dev:api": "cd apps/api && uv run uvicorn src.main:app --reload --host 0.0.0.0 --port ${API_PORT:-8000}",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev": "nx run-many --target=dev --all --parallel=3",
    "dev:fast": "nx run-many --target=dev --all --parallel=3 --skip-nx-cache",
    "dev:safe": "./scripts/dev-manager.sh start",
    "dev:safe-all": "./scripts/dev-manager.sh start-all",
    "dev:stop": "./scripts/dev-manager.sh stop",
    "dev:cleanup": "./scripts/dev-manager.sh cleanup",
    "dev:check": "./scripts/dev-manager.sh check",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "nx run-many --target=typecheck --all"
  },
  "dependencies": {
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router-dom": "^6.29.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@nx/eslint": "21.3.11",
    "@nx/eslint-plugin": "21.3.11",
    "@nx/js": "21.3.11",
    "@nx/react": "21.3.11",
    "@nx/vite": "21.3.11",
    "@nx/workspace": "21.3.11",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/react": "16.1.0",
    "@types/node": "^20.0.0",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsonc-eslint-parser": "^2.4.0",
    "nx": "21.3.11",
    "postcss": "^8.5.6",
    "prettier": "^2.6.2",
    "tailwindcss": "^4.1.11",
    "tslib": "^2.3.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  }
}
